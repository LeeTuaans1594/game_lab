# Normalize line endings and mark binaries for a Unity project

# Default: auto-detect text, do not change EOL unless specified below
* text=auto

# Unity text assets should stay LF in repo to avoid noisy diffs across OSes
*.cs           text eol=lf
*.meta         text eol=lf
*.unity        text eol=lf
*.asset        text eol=lf
*.prefab       text eol=lf
*.mat          text eol=lf
*.anim         text eol=lf
*.controller   text eol=lf
*.shader       text eol=lf
*.cginc        text eol=lf
*.compute      text eol=lf
*.hlsl         text eol=lf
*.glsl         text eol=lf
*.json         text eol=lf
*.asmdef       text eol=lf
*.asmpref      text eol=lf
*.inputactions text eol=lf
*.yaml         text eol=lf
*.yml          text eol=lf
*.md           text eol=lf
*.txt          text eol=lf

# Windows scripts can use CRLF
*.bat          text eol=crlf
*.cmd          text eol=crlf
*.ps1          text eol=crlf

# Mark binary files so Git won't try to diff or convert them
*.png          binary
*.jpg          binary
*.jpeg         binary
*.tga          binary
*.psd          binary
*.tif          binary
*.tiff         binary
*.bmp          binary
*.gif          binary
*.svg          binary
*.mp3          binary
*.ogg          binary
*.wav          binary
*.mp4          binary
*.mov          binary
*.avi          binary
*.fbx          binary
*.obj          binary
*.prefab.unity binary
*.unitypackage binary
*.zip          binary
*.7z           binary
*.rar          binary
*.dll          binary
*.exe          binary
*.a            binary
*.lib          binary
*.pdb          binary


